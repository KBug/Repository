<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.parrot.tv"
       name="Parrot TV"
       version="9.0.0"
       provider-name="Parrot Developers">
  <requires>
    <import addon="xbmc.python" version="2.2.0"/>
    <import addon="script.module.requests"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Parrot TV is free project by Parrot Developers</summary>
    <language>en</language>
    <description lang="en">Free CZ/SK TV for all. These links are freely avalibe on WWW.</description>
    <description lang="cz">CZ / SK TV Zdarma pro všechny.</description>
    <description lang="sk">CZ/SK Televízia zadarmo pre všetkých.</description>
    <assets>
      <icon>resources\media\Icon\icon.png</icon>    
      <fanart>resources\media\Icon\fanart.jpg</fanart>
      <screenshot>resources\media\Screenshot\1.png</screenshot>
      <screenshot>resources\media\Screenshot\2.png</screenshot>
      <screenshot>resources\media\Screenshot\3.png</screenshot>    
    </assets>
     <platform>all</platform>
  </extension>
</addon>
